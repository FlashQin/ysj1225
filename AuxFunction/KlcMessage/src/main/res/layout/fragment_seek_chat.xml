<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/meiv"
    android:orientation="vertical"
    android:paddingHorizontal="15dp">

    <TextView
        android:id="@+id/contentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingTop="30dp"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="聊天类型"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="22dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/videoRb"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_marginEnd="40dp"
            android:layout_weight="1"
            android:background="@drawable/selcet_chat_type"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="视频通话"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/voiceRb"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selcet_chat_type"
            android:button="@null"
            android:gravity="center"
            android:text="语音通话"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置话费"
        android:textColor="@color/white"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/settingPriceTv"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginVertical="23dp"
        android:background="@drawable/bg_is_viceo"
        android:drawableEnd="@mipmap/expand_down"
        android:paddingHorizontal="22dp"
        android:text=""
        android:textSize="14sp"
        android:textColor="@color/follow_color"
        android:gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一键邀请女生聊天"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="12dp"/>
    <Button
        android:id="@+id/seekchatBtn"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_is_video"
        android:text="发起求聊"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="45dp"/>


</LinearLayout>