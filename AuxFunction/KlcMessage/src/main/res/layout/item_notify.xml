<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/singAvatarIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="12dp"
            app:riv_oval="true"/>

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/singAvatarIv"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/singAvatarIv"
            android:textColor="@color/textColor3"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/contentTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTv"
            android:layout_toEndOf="@id/singAvatarIv"
            android:layout_marginEnd="50dp"
            android:ellipsize="end"
            android:textColor="@color/message_color0"
            android:textSize="14sp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/singAvatarIv"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:textColor="@color/textColorC"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/unReadCountTv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignBottom="@id/singAvatarIv"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="13dp"
            android:background="@drawable/bg_message_count"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="13sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#DEDEDE"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/deleteTv"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom|right"
        android:background="@color/gray3"
        android:gravity="center"
        android:text="@string/delete"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:translationX="60dp"
        tools:ignore="RtlHardcoded" />
</FrameLayout>
