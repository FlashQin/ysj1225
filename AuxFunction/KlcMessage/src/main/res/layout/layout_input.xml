<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commonRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:overScrollMode="never"
        android:scrollbars="none" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_input_edit"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputEt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="输入新消息"
            android:imeActionLabel="@string/send"
            android:imeOptions="actionSend"
            android:lines="1"
            android:paddingHorizontal="21dp"
            android:singleLine="true"
            android:textColorHint="@color/textColorC"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/faceIv"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:padding="6dp"
            android:src="@mipmap/liaotian_biaoqing" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/audioRecordIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="12dp"
            android:src="@mipmap/liaotian_yuyinxiaoxi" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/callVoiceIv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="12dp"
                android:src="@mipmap/liaotian_yuyintonghua"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/callVideoIv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="12dp"
                android:src="@mipmap/liaotian_shipintonghua"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/pictureIv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="12dp"
                android:src="@mipmap/liaotian_fasongtupian" />
        </LinearLayout>

        <ImageView
            android:id="@+id/giftIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="12dp"
            android:src="@mipmap/liaotian_zengsongliwu" />

    </LinearLayout>

</LinearLayout>