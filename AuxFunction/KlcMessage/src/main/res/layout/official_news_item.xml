<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/OfficialNews_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天 13:14"
        android:textColor="@color/textColor9"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/x10"
        />

    <RelativeLayout
        android:id="@+id/OfficialNews_Re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OfficialNews_Time"
        android:background="@drawable/bg_dialog">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/OfficialNews_Image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x130"
            android:scaleType="center"
            app:riv_corner_radius_top_left="10dp"
            app:riv_corner_radius_top_right="10dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/OfficialNews_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/textColor3"
            android:textStyle="bold"
            android:layout_margin="@dimen/x10"
            android:text="何止七夕，想朝夕和你在一起。"
            android:layout_below="@+id/OfficialNews_Image"/>
        <TextView
            android:id="@+id/OfficialNews_Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/textColor9"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:text="何止七夕，想朝夕和你在一起。何止七夕，想朝夕和你在一起。何止七夕，想朝夕和你在一起。何止七夕，想朝夕和你在一起。何止七夕，想朝夕和你在一起......"
            android:layout_below="@+id/OfficialNews_Title"/>
    </RelativeLayout>
</RelativeLayout>
