<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_bg_shadow">
        <LinearLayout
            android:id="@+id/ll_uncertified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x100"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_uncertified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleType="center"
                android:src="@mipmap/icon_anchor_authentication" />

            <LinearLayout
                android:id="@+id/layoutUnCertified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/tvUnCertifiedInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你还不是主播,快去"
                    android:textColor="#ff999999"
                    android:gravity="center"
                    android:textSize="13sp" />

            </LinearLayout>



        </LinearLayout>
        <TextView
            android:id="@+id/btn_authentication"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/x36"
            android:text="重新认证"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_below="@+id/ll_uncertified"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x130"
            android:layout_marginBottom="@dimen/x70"
            android:background="@drawable/bg_user_task_btn"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>