<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/view_title" />

        <ImageView
            android:id="@+id/YoungPattern_Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x40"
            android:background="@mipmap/icon_young_close"/>

        <TextView
            android:id="@+id/YoungPattern_State"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/x30"
            android:textColor="#AAAAAA"
            android:layout_gravity="center_horizontal"
            android:text="青少年模式 - 未开启"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/YoungPattern_ContentList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginRight="@dimen/x60"
            android:layout_marginTop="@dimen/x30"/>
    </LinearLayout>

    <TextView
        android:id="@+id/YoungPattern_Button"
        android:layout_width="@dimen/x220"
        android:layout_height="@dimen/x40"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/x50"
        android:background="@drawable/bg_user_task_btn"
        android:text="开启青少年模式"/>
</RelativeLayout>
