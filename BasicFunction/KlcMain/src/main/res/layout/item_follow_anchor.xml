<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/x12">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/avatarIv"
        android:layout_width="@dimen/x64"
        android:layout_height="@dimen/x64"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_follow_anchor"
        android:padding="@dimen/x4"
        android:scaleType="centerCrop"
        android:src="@mipmap/zanweitu"
        app:riv_oval="true" />

    <LinearLayout
        android:layout_width="@dimen/x57"
        android:layout_height="@dimen/x21"
        android:layout_alignBottom="@id/avatarIv"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/zhibozhong_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/follow_voice"
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/x12"
            android:layout_gravity="center"
            android:background="@mipmap/icon_shengyin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/x2"
            android:drawablePadding="@dimen/x3"
            android:gravity="center"
            android:text="直播中"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x10" />
    </LinearLayout>


    <TextView
        android:id="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatarIv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x5"
        android:text="郑驰焘"
        android:textColor="#FF333333"
        android:textSize="@dimen/x13"
        android:textStyle="bold" />

</RelativeLayout>