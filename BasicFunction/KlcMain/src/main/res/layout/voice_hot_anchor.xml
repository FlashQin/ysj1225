<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/VoiceHot_HeadImage_Re"
        android:layout_width="@dimen/x56"
        android:layout_height="@dimen/x56"
        >
        <ImageView
            android:layout_width="@dimen/x56"
            android:layout_height="@dimen/x56"
            android:layout_centerInParent="true"
            android:background="@drawable/red_voice_oval"
            />
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/VoiceHot_HeadImage"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            app:riv_oval="true"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/VoiceHot_Num"
            android:layout_width="@dimen/x34"
            android:layout_height="@dimen/x14"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:text="100"
            android:gravity="center"
            android:background="@drawable/red_rect3"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/VoiceHot_Name"
        android:layout_width="@dimen/x56"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor3"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_below="@+id/VoiceHot_HeadImage_Re"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x5"
        android:singleLine="true"
        android:ellipsize="end"
        android:text=""/>
</RelativeLayout>
