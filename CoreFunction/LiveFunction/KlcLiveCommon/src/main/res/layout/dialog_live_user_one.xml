<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LiveUser_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_video_comment"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x20"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginRight="@dimen/x12"
            android:layout_marginBottom="@dimen/x10">

            <ImageView
                android:id="@+id/LiveUser_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/close"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/LiveUser_Setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@mipmap/voice_set"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/LiveUser_Report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="举报"
                android:textColor="@color/textColor3"
                android:textSize="14sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"

            >

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/LiveUser_HeadImage"
                android:layout_width="@dimen/x56"
                android:layout_height="@dimen/x56"
                android:layout_marginLeft="@dimen/x30"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                app:riv_oval="true" />

            <LinearLayout
                android:id="@+id/LiveUser_Lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/x7"
                android:layout_toRightOf="@+id/LiveUser_HeadImage"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/LiveUser_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor3"
                    android:textSize="16sp"
                    tools:text="就搜到吉安 " />

                <LinearLayout
                    android:id="@+id/LiveUser_Gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="4dp">

                </LinearLayout>

                <ImageView
                    android:id="@+id/LiveUser_Grade"
                    android:layout_width="@dimen/x27"
                    android:layout_height="@dimen/x12"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_toRightOf="@+id/LiveUser_Id"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LiveUser_Lin"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/x7"
                android:layout_toRightOf="@+id/LiveUser_HeadImage"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/LiveUser_Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/LiveUser_HeadImage"
                    android:textColor="@color/textColorB"
                    android:textSize="13sp"
                    tools:text="1000" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/user_address" />

                <TextView
                    android:id="@+id/LiveUser_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/textColorB"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/x78"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x20"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Embrace_Mike"
                    android:layout_width="@dimen/x78"
                    android:layout_height="@dimen/x24"
                    android:background="@drawable/bg_userinfor_button"
                    android:gravity="center"
                    android:text="抱TA上麦"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible"/>

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginRight="@dimen/x12"
            android:layout_marginBottom="@dimen/x10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x54"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_blue"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_userlevel_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/x8"
                            android:text="用户等级"
                            android:textColor="#ffffffff"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_userlevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="0"
                            android:textColor="#ffcbfff9"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_userlevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/x5"
                        android:background="@mipmap/user_level" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x54"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_orange"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/x8"
                            android:text="财富等级"
                            android:textColor="#ffffffff"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_wealthlevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="0"
                            android:textColor="#ffffea05"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_wealthlevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/x5"
                        android:background="@mipmap/money_level" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/noble_line"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x54"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_black"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/x8"
                            android:text="贵族等级"
                            android:textColor="#ffffffff"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_noblelevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="暂无"
                            android:textColor="#ffffe696"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_noblelevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/x5"
                        android:background="@mipmap/vip_level" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buynoble_lin"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x54"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_black"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/x8"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="成为贵族"
                            android:textColor="#ffffffff"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_marginRight="@dimen/x5"
                        android:background="@mipmap/icon_nobellevel" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x48"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/LiveUser_FansNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#555555"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:text="粉丝"
                    android:textColor="#bbbbbb"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/LiveUser_FollowNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#555555"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:text="关注"
                    android:textColor="#bbbbbb"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/LiveUser_ExpensesNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#555555"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:text="消费"
                    android:textColor="#bbbbbb"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/LiveUser_ProfitNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#555555"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:text="收益"
                    android:textColor="#bbbbbb"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LiveUser_GiftLin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x82"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginTop="@dimen/x12"
            android:layout_marginRight="@dimen/x12"
            android:layout_marginBottom="@dimen/x20"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TA的礼物墙"
                android:textColor="@color/textColor3"
                android:textSize="14sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/LiveUser_GiftList"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x55"
                android:layout_marginTop="@dimen/x10"
                android:visibility="visible" />

            <TextView
                android:id="@+id/LiveUser_GiftList_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x55"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="TA还没收到礼物哦"
                android:textColor="@color/textColor6"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dedede" />

        <LinearLayout
            android:id="@+id/LiveUser_Button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x48"
            android:layout_below="@+id/LiveUser_lin"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/LiveUser_Follow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="+ 关注"
                android:textColor="#A570FE"
                android:textSize="14sp"
                android:visibility="visible" />

            <ImageView
                android:layout_width="0.5dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="#dedede"
                tools:ignore="Suspicious0dp" />

            <TextView
                android:id="@+id/LiveUser_Call"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="&#064;TA"
                android:textColor="@color/textColor3"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="0.5dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="#dedede"
                tools:ignore="Suspicious0dp" />

            <TextView
                android:id="@+id/LiveUser_GiveGift"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="送TA礼物"
                android:textColor="@color/textColor3"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="0.5dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="#dedede"
                tools:ignore="Suspicious0dp" />

            <TextView
                android:id="@+id/LiveUser_Message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="私信"
                android:textColor="@color/textColor3"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="0.5dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="#dedede"
                tools:ignore="Suspicious0dp" />

            <TextView
                android:id="@+id/LiveUser_Homepage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="主页"
                android:textColor="@color/textColor3"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>