<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x12"
        android:layout_marginLeft="@dimen/x12"
        android:background="@drawable/bg_live_user">
        
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/Follow_AnchorHead"
            android:layout_width="@dimen/x48"
            android:layout_height="@dimen/x48"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/x20"
            android:scaleType="centerCrop"
            app:riv_oval="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Follow_AnchorHead"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/Follow_AnchorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor3"
                android:textSize="14sp"
                android:text=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor6"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/x10"
                android:text="关注主播下次不迷路~"/>
        </LinearLayout>
        <TextView
            android:id="@+id/Follow_Buttom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:textColor="@color/white"
            android:text="马上关注"
            android:paddingRight="@dimen/x10"
            android:paddingLeft="@dimen/x10"
            android:paddingTop="@dimen/x5"
            android:paddingBottom="@dimen/x5"
            android:background="@drawable/bg_follow"/>
    </RelativeLayout>
</LinearLayout>
