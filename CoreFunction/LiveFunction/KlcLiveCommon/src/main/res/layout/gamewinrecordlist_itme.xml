<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x50"
        android:background="@mipmap/bg_gamewinrecord">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x32"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/GameWinRecord_ReLfte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/bg_left">
                <ImageView
                    android:id="@+id/GameWinRecord_GiftImage"
                    android:layout_width="@dimen/x28"
                    android:layout_height="@dimen/x28"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/GameWinRecord_ReRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/GameWinRecord_ReLfte"
                android:background="@mipmap/bg_right">
                <TextView
                    android:id="@+id/GameWinRecord_GiftName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="欢乐汽车x1"
                    android:layout_centerInParent="true"
                    android:textColor="#FE78AE"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
