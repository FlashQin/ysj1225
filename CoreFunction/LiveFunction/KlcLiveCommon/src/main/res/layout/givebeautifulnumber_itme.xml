<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/GiveBeautifulNumber_Re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/bg_give_beautifulmunber">

        <TextView
            android:id="@+id/GiveBeautifulNumber_Num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/x16"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:text="ID: 22222"/>

        <TextView
            android:id="@+id/GiveBeautifulNumber_Money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_money"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:drawablePadding="@dimen/x5"
            android:layout_below="@+id/GiveBeautifulNumber_Num"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginBottom="@dimen/x16"
            android:text="99999"/>
    </RelativeLayout>
</LinearLayout>
