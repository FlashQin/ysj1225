<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="@dimen/x270"
        android:layout_height="@dimen/x166"
        android:layout_centerInParent="true"
        android:background="@mipmap/gold_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginRight="@dimen/x24"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提示"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x14"
                android:text="你的余额不足"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x8"
                android:text="剩余时间 02:54"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/buttom_Recharge"
                android:layout_width="@dimen/x110"
                android:layout_height="@dimen/y34"
                android:layout_marginTop="@dimen/x14"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:text="立即充值"
                android:textColor="#6E90F9"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
