<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y350"
        android:background="@drawable/bg_video_comment"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/livehot_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/x50"/>

        <com.kalacheng.util.view.ViewPagerIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y40"
            app:bold="true"
            app:change_size="true"
            app:currentItem="0"
            app:indicatorColor="@color/color_925EFF"
            app:indicatorHeight="3dp"
            app:indicatorWidth="22dp"
            app:lightColor="#222222"
            app:normalColor="#888888"
            app:title_textSize="14sp"
            app:visibleItemCount="2" />
    </FrameLayout>

</RelativeLayout>
