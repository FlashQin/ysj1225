<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<RelativeLayout
    android:layout_width="@dimen/x287"
    android:layout_height="@dimen/x140"
    android:layout_centerInParent="true"
    android:background="@drawable/bg_dialog">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x30"
        android:text="是否结束通话"/>
    <TextView
        android:id="@+id/live_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor3"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x10"
        android:layout_below="@+id/title"
        android:text="通话时长 ： 00:00:00"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_above="@+id/bottom"
        android:background="#f4f4f4"/>
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/live_canle"
            android:layout_width="0dp"
            android:layout_height="@dimen/y40"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/textColor3"
            android:textSize="16sp"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginLeft="@dimen/y30"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom"
            android:background="#f4f4f4"/>
        <TextView
            android:id="@+id/live_end"
            android:layout_width="0dp"
            android:layout_height="@dimen/y40"
            android:layout_weight="1"
            android:text="确定"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/y30"
            android:textColor="@color/color_DD85FD"
            android:textSize="16sp"
            android:gravity="center"
            />
    </LinearLayout>

</RelativeLayout>


</RelativeLayout>
