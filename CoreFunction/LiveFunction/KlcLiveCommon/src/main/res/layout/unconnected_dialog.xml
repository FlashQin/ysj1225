<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/x287"
        android:layout_height="@dimen/x235"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_dialog">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor3"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x80"
            android:text="TA正在忙，请稍后再试..."/>
        <TextView
            android:id="@+id/unconnected_exit"
            android:layout_width="@dimen/x124"
            android:layout_height="@dimen/y36"
            android:text="等会再聊"
            android:textColor="@color/white"
            android:background="@drawable/unconnected_bg"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/x50"/>
    </RelativeLayout>

</RelativeLayout>
