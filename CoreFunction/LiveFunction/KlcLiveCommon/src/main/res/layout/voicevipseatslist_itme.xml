<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginBottom="@dimen/x10">

        <TextView
            android:id="@+id/VoiceVipSeats_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor6"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:text="1"
            />
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/VoiceVipSeats_UserHead"
            android:layout_width="@dimen/x46"
            android:layout_height="@dimen/x46"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/VoiceVipSeats_Number"
            android:src="@mipmap/ic_launcher"
            app:riv_oval="true"
            android:layout_marginLeft="@dimen/x10"
            />
        <TextView
            android:id="@+id/VoiceVipSeats_UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/VoiceVipSeats_UserHead"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x5"
            android:textColor="@color/textColor3"
            android:text="驾驶的季后赛的"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/VoiceVipSeats_UserHead"
            android:layout_below="@+id/VoiceVipSeats_UserName"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x5"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/VoiceVipSeats_Sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

            </LinearLayout>
            <ImageView
                android:id="@+id/VoiceVipSeats_UserGuard"
                android:layout_width="@dimen/x32"
                android:layout_height="@dimen/x15"
                android:layout_marginLeft="@dimen/x5"
                />
            <ImageView
                android:id="@+id/VoiceVipSeats_VipGuard"
                android:layout_width="@dimen/x32"
                android:layout_height="@dimen/x15"
                android:layout_marginLeft="@dimen/x5"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/VoiceVipSeats_Money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor6"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x12"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/x3"
            android:visibility="visible"
            android:drawableLeft="@mipmap/icon_money"
            android:text=""/>
    </RelativeLayout>
</LinearLayout>
