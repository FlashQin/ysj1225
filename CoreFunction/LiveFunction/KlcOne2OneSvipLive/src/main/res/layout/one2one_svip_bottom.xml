<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.kalacheng.one2onelive.viewmodel.One2OneSvipBottomViewModel" />
    </data>
    <LinearLayout
        android:id="@+id/one2one_Bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/anchor_phone"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_gravity="right"
            android:layout_marginBottom="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_anchor_phone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_chat"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/chat_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <ImageView
                    android:id="@+id/btn_treasure"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/icon_treasure" />

                <ImageView
                    android:id="@+id/btn_gift"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:background="@mipmap/live_gift_icon" />
                <ImageView
                    android:id="@+id/btn_camera"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:background="@mipmap/live_camera_icon" />
                <ImageView
                    android:id="@+id/btn_wish"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:background="@mipmap/live_wish_icon" />
                <ImageView
                    android:id="@+id/btn_muice"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:background="@mipmap/live_muice_icon" />

                <ImageView
                    android:id="@+id/btn_beautiful"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:background="@mipmap/live_beautiful_icon" />
                <!--外放-->
                <ImageView
                    android:id="@+id/btn_externalTone"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/svip_openvoice" />

                <RelativeLayout
                    android:id="@+id/btn_SvipRe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    >
                    <ImageView
                        android:id="@+id/btn_svip"
                        android:layout_width="@dimen/x30"
                        android:layout_height="@dimen/x30"
                        android:visibility="visible"
                        android:background="@mipmap/bg_svip" />
                    <ImageView
                        android:id="@+id/btn_issvip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_toRightOf="@+id/btn_svip"
                        android:layout_marginLeft="-8dp"
                        android:background="@mipmap/bg_issvip" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/btn_recharge"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:background="@mipmap/live_recharge_icon" />

                <!--禁远方的声音-->
                <ImageView
                    android:id="@+id/btn_voiceStop"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:background="@mipmap/voice_live_external_open" />
                <ImageView
                    android:id="@+id/btn_more"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:visibility="visible"
                    android:background="@mipmap/more" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>
