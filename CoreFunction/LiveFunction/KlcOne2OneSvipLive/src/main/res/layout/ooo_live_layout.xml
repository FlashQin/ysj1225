<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x140"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@drawable/bg_video_comment">
        <LinearLayout
            android:id="@+id/live_dialog_fans"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x30"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/x38"
                android:layout_height="@dimen/x38"
                android:background="@mipmap/live_fans"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/textColor3"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x5"
                android:text="粉丝团"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/live_dialog_beautiful"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x30"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/x38"
                android:layout_height="@dimen/x38"
                android:background="@mipmap/live_beautiful_dialog_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/textColor3"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x5"
                android:text="美颜"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/live_dialog_camera"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/x30"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/x38"
                android:layout_height="@dimen/x38"
                android:background="@mipmap/live_dialog_camera_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/textColor3"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x5"
                android:text="翻转"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/live_dialog_voice"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/x30"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/live_dialog_voice_image"
                android:layout_width="@dimen/x38"
                android:layout_height="@dimen/x38"
                android:background="@mipmap/voice_open"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/textColor3"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x5"
                android:text="静音"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/live_dialog_Openvideo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/x30"
            android:visibility="visible"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/live_dialog_video_image"
                android:layout_width="@dimen/x38"
                android:layout_height="@dimen/x38"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/video_live_open"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/textColor3"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x5"
                android:text="打开视频"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/live_dialog_close"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x30"
            android:gravity="center"
            android:layout_toRightOf="@+id/live_dialog_closevideo"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/x38"
                android:layout_height="@dimen/x38"
                android:background="@mipmap/live_dialogrefuse_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/textColor3"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x5"
                android:text="挂断"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
