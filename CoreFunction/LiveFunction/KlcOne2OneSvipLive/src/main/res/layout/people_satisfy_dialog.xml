<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/x270"
        android:layout_height="@dimen/x140"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_svip_dialog">
        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/close"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/x12"/>
        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前已经有8位主播陪您一起玩，不能再邀请"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/close"
            android:textColor="@color/textColor3"/>
        <TextView
            android:id="@+id/PeopleSatisfy_close"
            android:layout_width="@dimen/x190"
            android:layout_height="@dimen/x34"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_below="@+id/number"
            android:gravity="center"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginBottom="@dimen/x10"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_svip_botton"
            android:text="我知道了"/>
    </RelativeLayout>
</RelativeLayout>
