<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/SvipAnchor_headIamge"
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/x42"
            app:riv_oval="true"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginTop="@dimen/x12"
            android:layout_marginBottom="@dimen/x12"
            android:scaleType="centerCrop"
            />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/SvipAnchor_headIamge"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/SvipAnchor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:textSize="14sp"
                    android:text="adasd"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/SvipAnchor_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#aaaaaa"
                    android:textSize="10sp"
                    android:text="200金币/分钟"
                    android:textStyle="bold"/>
            </LinearLayout>
        <TextView
            android:id="@+id/SvipAnchor_invitation"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x24"
            android:text="邀请"
            android:textSize="12sp"
            android:background="@drawable/bg_red2_recharge"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/x12"/>
    </RelativeLayout>
</LinearLayout>
