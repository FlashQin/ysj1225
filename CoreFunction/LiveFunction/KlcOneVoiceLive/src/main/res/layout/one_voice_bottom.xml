<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.kalacheng.onevoicelive.viewmodel.OneVoiceBottomViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">


        <ImageView
            android:id="@+id/anchor_phone"
            android:visibility="gone"
            android:layout_gravity="right"
            android:layout_marginBottom="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:visibility="visible"
            android:src="@mipmap/icon_anchor_phone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal">




            <ImageView
                android:id="@+id/btn_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/chat_icon" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <ImageView
                    android:id="@+id/btn_treasure"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/icon_treasure"
                    />
                <ImageView
                    android:id="@+id/btn_fans"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/live_fans" />
                <ImageView
                    android:id="@+id/btn_wish"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/wish_list" />
                <ImageView
                    android:id="@+id/btn_muise"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/live_muice_icon" />
                <ImageView
                    android:id="@+id/btn_gift"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/voice_live_gift" />
                <!--外放-->
                <ImageView
                    android:id="@+id/ExternalTone"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/voice_live_external_open" />
                <ImageView
                    android:id="@+id/btn_recharge"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:background="@mipmap/voice_recharge" />
                <ImageView
                    android:id="@+id/voice_live_speak"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/anchor_voice_close" />

                <ImageView
                    android:id="@+id/btn_refuse"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:background="@mipmap/voice_refuse" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</layout>
