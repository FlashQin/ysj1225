<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <import type="android.text.TextUtils" />

        <import type="com.kalacheng.util.utils.DecimalFormatUtils" />

        <variable
            name="model"
            type="com.kalacheng.busshop.model.ShopUserOrderDetailDTO" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F6F6">

        <FrameLayout
            android:id="@+id/layoutTitleYellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_order_details_title">

            <ImageView
                android:id="@+id/ivShopOrderStatus"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="right"
                android:layout_marginTop="65dp"
                android:layout_marginRight="38dp"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_shop_order_confirm"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layoutTimeCountdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="56dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/icon_shop_order_time_countdown"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvTimeCountdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="0"
                    android:textColor="#FFFFFFFF"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/tvTimeCountdownUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:text="天"
                    android:textColor="#FFFFFFFF"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvTimeCountdown1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="0"
                    android:textColor="#FFFFFFFF"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/tvTimeCountdownUnit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:text="时"
                    android:textColor="#FFFFFFFF"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvTimeCountdown2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="0"
                    android:textColor="#FFFFFFFF"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/tvTimeCountdownUnit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:text="分"
                    android:textColor="#FFFFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="21dp">

                <TextView
                    android:id="@+id/tvOrderStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:textColor="#FFFFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tvOrderInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:textColor="#FFFFFFFF"
                    android:textSize="13sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvReturnProcess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:visibility="gone" />
            </LinearLayout>
        </FrameLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:id="@+id/viewTransparent"
                    android:layout_width="match_parent"
                    android:layout_height="115dp" />

                <RelativeLayout
                    android:id="@+id/logisticsRl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_order_details_item"
                    android:minHeight="70dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:visibility="gone"
                    tool:visibility="visible">

                    <ImageView
                        android:id="@+id/logisticsIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/icon_wuliuxinxi" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/logisticsIv"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/logisticsTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{TextUtils.isEmpty(model.sellerLogisticsContent)?`暂无物流信息`:model.sellerLogisticsContent}"
                            android:textColor="@color/textColor6"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/logisticsTimeTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/textColor9"
                            android:textSize="11sp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_order_details_item"
                    android:minHeight="70dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:id="@+id/iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/icon_order_details_location" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/iv"
                        android:orientation="vertical"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/nameTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{(TextUtils.isEmpty(model.businessOrder.name)?``:model.businessOrder.name+` `)+(TextUtils.isEmpty(model.businessOrder.phoneNum)?``:model.businessOrder.phoneNum)}"
                            android:textColor="#FF333333"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/addressTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@{model.businessOrder.address}"
                            android:textColor="@color/textColor6"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_order_details_item"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp">

                        <LinearLayout
                            android:id="@+id/titleLl"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/sellserLogoIv"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:scaleType="centerCrop"
                                app:riv_oval="true" />

                            <TextView
                                android:id="@+id/sellserNameTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:textColor="#FF333333"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvInitiate"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:drawableLeft="@mipmap/icon_shop_initiate"
                            android:drawablePadding="6dp"
                            android:gravity="center_vertical"
                            android:text="联系卖家"
                            android:textColor="#FC8F3A"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:overScrollMode="never" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/countTv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@{`共计`+model.goodsNum+`件商品`}"
                            android:textColor="@color/textColor9"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/goodsPriceTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{`¥` + DecimalFormatUtils.toTwo(model.businessOrder.transactionAmount)}"
                            android:textColor="#333333"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutBuyer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        tool:visibility="visible">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvBuyerCancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:background="@drawable/bg_btn_order_start"
                            android:gravity="center"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="5dp"
                            android:text="取消订单"
                            android:textColor="#888888"
                            android:textSize="13sp"
                            android:visibility="gone"
                            tool:visibility="visible" />

                        <TextView
                            android:id="@+id/tvBuyerChangeAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:background="@drawable/bg_btn_order_start"
                            android:gravity="center"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="5dp"
                            android:text="修改地址"
                            android:textColor="#888888"
                            android:textSize="13sp"
                            android:visibility="gone"
                            tool:visibility="visible" />

                        <TextView
                            android:id="@+id/tvBuyerPay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:background="@drawable/bg_btn_order_end"
                            android:gravity="center"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="5dp"
                            android:text="立即付款"
                            android:textColor="#FC8F3A"
                            android:textSize="13sp"
                            android:visibility="gone"
                            tool:visibility="visible" />

                        <TextView
                            android:id="@+id/tvBuyerApplyRefund"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:background="@drawable/bg_btn_order_start"
                            android:gravity="center"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="5dp"
                            android:text="申请退款"
                            android:textColor="#888888"
                            android:textSize="13sp"
                            android:visibility="gone"
                            tool:visibility="visible" />

                        <TextView
                            android:id="@+id/tvBuyerRemindShipment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:background="@drawable/bg_btn_order_start"
                            android:gravity="center"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="5dp"
                            android:text="提醒发货"
                            android:textColor="#888888"
                            android:textSize="13sp"
                            android:visibility="gone"
                            tool:visibility="visible" />

                        <TextView
                            android:id="@+id/tvBuyerConfirm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:background="@drawable/bg_btn_order_end"
                            android:gravity="center"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="5dp"
                            android:text="确认收货"
                            android:textColor="#FC8F3A"
                            android:textSize="13sp"
                            android:visibility="gone"
                            tool:visibility="visible" />

                        <TextView
                            android:id="@+id/tvBuyerCancelApplyRefund"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:background="@drawable/bg_btn_order_start"
                            android:gravity="center"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="5dp"
                            android:text="撤销退款申请"
                            android:textColor="#888888"
                            android:textSize="13sp"
                            android:visibility="gone"
                            tool:visibility="visible" />

                        <TextView
                            android:id="@+id/tvBuyerLogisticsNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:background="@drawable/bg_btn_order_end"
                            android:gravity="center"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="5dp"
                            android:text="填写物流单号"
                            android:textColor="#FC8F3A"
                            android:textSize="13sp"
                            android:visibility="gone"
                            tool:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutSeller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tool:visibility="visible">

                        <LinearLayout
                            android:id="@+id/layoutSellerDeliverGoods"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            tool:visibility="visible">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/tvSellerDeliverGoods"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:background="@drawable/bg_btn_order_end"
                                android:gravity="center"
                                android:paddingHorizontal="14dp"
                                android:paddingVertical="5dp"
                                android:text="立即发货"
                                android:textColor="#FC8F3A"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvSellerReviewRefund"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_btn_order_solid"
                            android:gravity="center"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="7dp"
                            android:text="审核退款申请"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:visibility="gone"
                            tool:visibility="visible" />

                        <TextView
                            android:id="@+id/tvSellerReviewGoods"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_btn_order_solid"
                            android:gravity="center"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="7dp"
                            android:text="货物审核"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:visibility="gone"
                            tool:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutRefundLogistics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_order_details_item"
                    android:minHeight="80dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="gone"
                    tool:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerInside"
                            android:src="@mipmap/icon_wuliuxinxi_refund" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="退货信息"
                            android:textColor="#FF333333"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvRefundLogisticsNum"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="顺丰速运"
                            android:textColor="#FF262626"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvRefundLogisticsInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:text="@{TextUtils.isEmpty(model.buyerLogisticsContent)?`暂无物流信息`:model.buyerLogisticsContent}"
                        android:textColor="#FF666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvRefundLogisticsTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="#FF999999"
                        android:textSize="11sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_order_details_item"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="订单编号"
                            android:textColor="@color/textColor6"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{model.businessOrder.orderNum}"
                            android:textColor="@color/textColor3"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="下单时间"
                            android:textColor="@color/textColor6"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/addTimeTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor3"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="订单金额"
                            android:textColor="@color/textColor6"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{`¥`+DecimalFormatUtils.toTwo(model.businessOrder.orderAmount)}"
                            android:textColor="@color/textColor3"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="优惠金额"
                            android:textColor="@color/textColor6"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{`¥`+(model.businessOrder.orderAmount-model.businessOrder.transactionAmount>0?DecimalFormatUtils.toTwo(model.businessOrder.orderAmount-model.businessOrder.transactionAmount):`0.00`)}"
                            android:textColor="#FC8F3A"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="实付金额"
                            android:textColor="@color/textColor6"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{`¥`+DecimalFormatUtils.toTwo(model.businessOrder.transactionAmount)}"
                            android:textColor="@color/textColor3"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutPayTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="支付时间"
                            android:textColor="@color/textColor6"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/payTimeTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor3"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutPayMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="支付方式"
                            android:textColor="@color/textColor6"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{model.parentOrder.channelId==1?`支付宝`:`微信`}"
                            android:textColor="@color/textColor3"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LayoutRefundAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:visibility="gone"
                        tool:visibility="visible">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="退款金额"
                            android:textColor="@color/textColor6"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{`¥`+DecimalFormatUtils.toTwo(model.parentOrder.nhrAmount)}"
                            android:textColor="@color/textColor3"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LayoutRefundTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:visibility="gone"
                        tool:visibility="visible">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="退款时间"
                            android:textColor="@color/textColor6"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvRefundTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor3"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutPayNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="支付交易号"
                            android:textColor="@color/textColor6"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/payNumTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{model.parentOrder.payOrder}"
                            android:textColor="@color/textColor3"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="商品渠道"
                            android:textColor="@color/textColor6"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="官方渠道"
                            android:textColor="@color/textColor3"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <ImageView
            android:id="@+id/backIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:onClick="backClick"
            android:padding="15dp"
            android:src="@mipmap/icon_back"
            android:tint="@color/white" />

        <LinearLayout
            android:id="@+id/layoutRefuseReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="23dp"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            tool:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未通过原因"
                android:textColor="#FFFFFFFF"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white" />
        </LinearLayout>
    </FrameLayout>
</layout>