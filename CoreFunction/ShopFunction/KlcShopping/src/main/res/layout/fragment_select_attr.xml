<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/bg_fragment_attr"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/goodIv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginVertical="14dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/goodIv"
            android:layout_alignBottom="@id/goodIv"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/goodIv"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goodsPriceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FB0035"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/price2Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="#888888"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/countTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#999999"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/attrTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#333333"
                android:textSize="14dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/closeIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="15dp"
            android:src="@mipmap/icon_guanbi" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="2dp"
        android:background="#DEDEDE" />

    <LinearLayout
        android:id="@+id/attr1Ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/attr1Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:textColor="#FF333333"
            android:textSize="14dp" />

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/flowLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            zhy:max_select="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="2dp"
            android:background="#DEDEDE" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/attr2Ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/attr2Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:text="颜色"
            android:textColor="#FF333333"
            android:textSize="14dp" />

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/flowLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            zhy:max_select="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="2dp"
            android:background="#DEDEDE" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_weight="1"
            android:text="购买数量"
            android:textColor="#FF333333"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/reduceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingStart="22dp"
            android:paddingEnd="10dp"
            android:text="-"
            android:textColor="#EAEAEA"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/numTv"
            android:layout_width="44dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_tag"
            android:gravity="center"
            android:text="1"
            android:textColor="#666666"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/addTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="22dp"
            android:text="+"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="2dp"
        android:background="#DEDEDE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="14dp">

        <TextView
            android:id="@+id/addCartTv"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="7dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_add_cart"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/addOrderTv"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="7dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_add_order"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@android:color/white"
            android:textSize="14dp" />


    </LinearLayout>
</LinearLayout>