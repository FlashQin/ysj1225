<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:orientation="vertical">

    <View
        android:id="@+id/topLineView"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="12dp"
        android:background="#DEDEDE" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@android:color/white" />

    <LinearLayout
        android:id="@+id/item0Ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/itemLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutGoodInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/checkCb"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:drawableStart="@mipmap/icon_gouxuan_1"
                    android:paddingHorizontal="12dp" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/pictureIv"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher"
                    app:riv_corner_radius="3dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/goodsNameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="line friends森林系列盲盒可爱公仔桌面摆件小号超萌手办生…"
                        android:textColor="#FF333333"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/skuNameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_sku"
                        android:drawableEnd="@mipmap/icon_down"
                        android:drawablePadding="4dp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="象牙白;S"
                        android:textColor="#999999"
                        android:textSize="12dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="138dp"
                android:layout_marginTop="-3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/priceTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="¥ 59.00"
                    android:textColor="#FB0035"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="78dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_count_add_reduce"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/reduceTv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="22"
                        android:gravity="center"
                        android:text="—"
                        android:textColor="#FFEAEAEA"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DEDEDE" />

                    <TextView
                        android:id="@+id/countTv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="22"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#333333"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DEDEDE" />

                    <TextView
                        android:id="@+id/addTv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="22"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="#333333"
                        android:textSize="15dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/delTv"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#FF4915"
            android:gravity="center"
            android:text="删除"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

    </LinearLayout>

    <View
        android:id="@+id/bottomLineView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/bg_cart_goods" />

</LinearLayout>