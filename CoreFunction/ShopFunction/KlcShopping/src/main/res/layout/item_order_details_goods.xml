<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/goodsPicIv"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:riv_corner_radius="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/goodsNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="仿珍珠发卡女头饰夹子韩国刘海夹一字夹成人发夹…"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/skuNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goodsNameTv"
            android:text="红色;M"
            android:textColor="#FF999999"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/goodsPriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="¥ 30.00"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/countTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/goodsPriceTv"
            android:text="x1"
            android:textColor="#FF999999"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>