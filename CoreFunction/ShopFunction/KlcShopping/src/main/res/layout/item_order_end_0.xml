<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/endRootLl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_cart_goods"
    android:orientation="vertical"
    android:paddingBottom="13dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/countTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/textColor9"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/goodsPriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="#FFFB0035"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/end1Rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:visibility="gone"
        tool:visibility="visible">

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvOrderCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_btn_order_start"
            android:gravity="center"
            android:paddingHorizontal="14dp"
            android:paddingVertical="5dp"
            android:text="取消订单"
            android:textColor="#888888"
            android:textSize="13dp"
            android:visibility="gone"
            tool:visibility="visible" />

        <TextView
            android:id="@+id/tvOrderPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_btn_order_end"
            android:gravity="center"
            android:paddingHorizontal="14dp"
            android:paddingVertical="5dp"
            android:text="立即付款"
            android:textColor="#FC8F3A"
            android:textSize="13dp"
            android:visibility="gone"
            tool:visibility="visible" />

        <TextView
            android:id="@+id/tvCustomerService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_btn_order_start"
            android:gravity="center"
            android:paddingHorizontal="14dp"
            android:paddingVertical="5dp"
            android:text="联系客服"
            android:textColor="#888888"
            android:textSize="13dp"
            android:visibility="gone"
            tool:visibility="visible" />

        <TextView
            android:id="@+id/tvOrderRemind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_btn_order_end"
            android:gravity="center"
            android:paddingHorizontal="14dp"
            android:paddingVertical="5dp"
            android:text="提醒发货"
            android:textColor="#FC8F3A"
            android:textSize="13dp"
            android:visibility="gone"
            tool:visibility="visible" />

        <TextView
            android:id="@+id/tvOrderLogistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_btn_order_start"
            android:gravity="center"
            android:paddingHorizontal="14dp"
            android:paddingVertical="5dp"
            android:text="查看物流"
            android:textColor="#888888"
            android:textSize="13dp"
            android:visibility="gone"
            tool:visibility="visible" />

        <TextView
            android:id="@+id/tvOrderConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_btn_order_end"
            android:gravity="center"
            android:paddingHorizontal="14dp"
            android:paddingVertical="5dp"
            android:text="确认收货"
            android:textColor="#FC8F3A"
            android:textSize="13dp"
            android:visibility="gone"
            tool:visibility="visible" />

        <TextView
            android:id="@+id/tvBuyAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_btn_order_end"
            android:gravity="center"
            android:paddingHorizontal="14dp"
            android:paddingVertical="5dp"
            android:text="再次购买"
            android:textColor="#FC8F3A"
            android:textSize="13dp"
            android:visibility="gone"
            tool:visibility="visible" />

        <TextView
            android:id="@+id/tvRefundCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_btn_order_end"
            android:gravity="center"
            android:paddingHorizontal="14dp"
            android:paddingVertical="5dp"
            android:text="撤销退款申请"
            android:textColor="#FC8F3A"
            android:textSize="13dp"
            android:visibility="gone"
            tool:visibility="visible" />

        <TextView
            android:id="@+id/tvLogisticsNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_btn_order_end"
            android:gravity="center"
            android:paddingHorizontal="14dp"
            android:paddingVertical="5dp"
            android:text="填写物流单号"
            android:textColor="#FC8F3A"
            android:textSize="13dp"
            android:visibility="gone"
            tool:visibility="visible" />
    </LinearLayout>

</LinearLayout>




