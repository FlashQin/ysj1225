<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    app:layout_scrollFlags="scroll|snap"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/ivSignIn"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_main_signin_grey"
            android:visibility="visible" />

        <View
            android:id="@+id/ivSingInView"
            android:layout_width="@dimen/x10"
            android:layout_height="@dimen/x10"
            android:layout_alignTop="@id/ivSignIn"
            android:layout_alignEnd="@id/ivSignIn"
            android:layout_marginTop="@dimen/x8"
            android:layout_marginEnd="@dimen/x9"
            android:background="@drawable/bg_red_oval_un_read"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutMeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_avatar"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:scaleType="centerCrop"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:shrinkColumns="0"
                android:stretchColumns="1">

                <TableRow>

                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/textColor3"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layoutSex"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_marginStart="7dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="4dp"
                            android:paddingEnd="3dp" />

                        <ImageView
                            android:id="@+id/iv_grade"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_marginStart="4dp"
                            android:scaleType="centerInside"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/ivWealthGrade"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_marginStart="4dp"
                            android:scaleType="centerInside"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/ivNobleGrade"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_marginStart="4dp"
                            android:scaleType="centerInside"
                            android:visibility="visible" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvIdName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor9"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor9"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/textColor9"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivMeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="12dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <RelativeLayout
            android:id="@+id/ll_follow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_follow_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="0"
                android:textColor="@color/textColor6"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="关注"
                android:textColor="@color/textColor9"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:layout_marginTop="23dp"
            android:background="#D8D8D8" />

        <RelativeLayout
            android:id="@+id/ll_fans"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_fans_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="0"
                android:textColor="@color/textColor6"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="粉丝"
                android:textColor="@color/textColor9"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:layout_marginTop="23dp"
            android:background="#D8D8D8" />

        <RelativeLayout
            android:id="@+id/ll_views"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_zan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="0"
                android:textColor="@color/textColor6"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="我的视图"
                android:textColor="@color/textColor9"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:layout_marginTop="23dp"
            android:background="#D8D8D8" />

        <RelativeLayout
            android:id="@+id/ll_browse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_read_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:text="0"
                android:textColor="@color/textColor6"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="谁看过我"
                android:textColor="@color/textColor9"
                android:textSize="13sp" />

            <TextView xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/tvEyeRed"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_red_point"
                android:gravity="center"
                android:includeFontPadding="false"
                android:minWidth="14dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone"
                tools:ignore="SmallSp" />
        </RelativeLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTabMe1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/shape_bg_shadow"
        android:overScrollMode="never"
        android:paddingTop="17dp"
        android:paddingBottom="15dp" />
</LinearLayout>