<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/x270"
        android:layout_height="@dimen/x150"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_dialog_2">

        <TextView
            android:id="@+id/SingLaloot_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x30"
            android:textColor="@color/textColor3"
            android:lineSpacingExtra="@dimen/x5"
            android:gravity="center"
            android:text="你还没有认证，无法抢单！ \n快去认证，开始赚钱吧！"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#f4f4f4"/>
        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/AnchorAttestation_canle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/textColor3"
                android:text="取消"/>
            <ImageView
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:background="#f4f4f4"/>
            <TextView
                android:id="@+id/AnchorAttestation_true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#DD85FD"
                android:text="确定"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
