<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <!--升级-->
    <RelativeLayout
        android:id="@+id/BeautifulNum_Upgrade"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x40"
        android:background="@drawable/bg_dialog_2"
        android:gravity="center_horizontal">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/BeautifulNum_userImage"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x5"
            android:layout_toRightOf="@+id/Upgrade_text1"
            android:src="@mipmap/ic_launcher"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/BeautifulNum_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x5"
            android:layout_toRightOf="@+id/BeautifulNum_userImage"
            android:text="给主播赠送了"
            android:textColor="@color/textColor3"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/BeautifulNum_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x10"
            android:layout_toRightOf="@+id/BeautifulNum_Title"
            android:text="靓号：487788"
            android:textColor="#FF5E0D"
            android:textSize="12sp" />

    </RelativeLayout>
</LinearLayout>
