<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ChatLocal_Re"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x84">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ChatLocal_headImage"
            android:layout_width="@dimen/x44"
            android:layout_height="@dimen/x44"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x12"
            android:src="@mipmap/ic_launcher"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x12"
            android:layout_toRightOf="@+id/ChatLocal_headImage"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ChatLocal_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="哈哈哈哈"
                    android:textColor="@color/textColor3"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/ChatLocal_Distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="哈哈哈哈"
                    android:textColor="@color/textColor6"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layoutSex"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bg_sex_girl"
                    android:gravity="center_vertical"
                    android:minWidth="31dp"
                    android:orientation="horizontal"
                    android:paddingLeft="4dp"
                    android:paddingRight="3dp">

                    <ImageView
                        android:id="@+id/ChatLocal_sex"
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/icon_girl_white" />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="0"
                        android:textColor="#ffffffff"
                        android:textSize="10sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ChatLocal_vserGrade"
                    android:layout_width="@dimen/x32"
                    android:layout_height="@dimen/x15"
                    android:layout_marginLeft="@dimen/x5" />

                <ImageView
                    android:id="@+id/ChatLocal_vipGrade"
                    android:layout_width="@dimen/x32"
                    android:layout_height="@dimen/x15"
                    android:layout_marginLeft="@dimen/x5" />

                <LinearLayout
                    android:id="@+id/ll_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x5"
                    android:background="@drawable/shape_fff4d7_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="4dp"
                    android:paddingTop="2dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="2dp">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/icon_money" />

                    <TextView
                        android:id="@+id/tv_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:textColor="#FFB80B"
                        android:textSize="12sp"
                        tools:text="999" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/ChatLocal_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x12"
            android:background="@mipmap/icon_fristlove_video" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#f4f4f4" />
</LinearLayout>
