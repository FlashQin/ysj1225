<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rectangle_radius_top_white"
    android:orientation="vertical">

    <TextView
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="15sp"
        android:text="请选择你的生日"/>

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:calendarViewShown="false"
        android:calendarTextColor="#FF5EC6"
        android:datePickerMode="spinner" />

    <!--    android:yearListSelectorColor="#FF5EC6"-->
    <!--    android:dayOfWeekBackground="#FFFDFE"-->

    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:paddingRight="15dp"
        android:paddingBottom="12dp"
        android:text="@string/confirm"
        android:textColor="#DE84FD"
        android:textSize="14sp" />
</RelativeLayout>