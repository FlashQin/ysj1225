<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@mipmap/bg_mybirthday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom|center">

            <TextView
                android:id="@+id/tv_1"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="HAPPY"/>

            <TextView
                android:id="@+id/tv_2"
                android:layout_marginBottom="44dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26dp"
                android:textColor="@color/white"
                android:text="BIRTHDAY!"/>

            <RelativeLayout
                android:layout_marginBottom="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:paddingRight="110dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/birthday_hat"/>

                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/avatar"
                        android:layout_marginTop="10dp"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher"
                        bind:riv_border_color="@color/white"
                        bind:riv_border_width="3dp"
                        bind:riv_oval="true" />


                </LinearLayout>

            </RelativeLayout>



            <TextView
                android:id="@+id/birthday_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:typeface="monospace"
                android:textColor="#9D5F00"
                android:textSize="23dp"
                tools:text="亲爱的小妖怪" />

            <TextView
                android:id="@+id/birthday_content"
                android:layout_marginTop="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:typeface="monospace"
                android:textColor="#9D5F00"
                android:textSize="23dp"
                tools:text="生日快乐！" />

            <ImageView
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@mipmap/birthday_cake"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_gif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>


</layout>