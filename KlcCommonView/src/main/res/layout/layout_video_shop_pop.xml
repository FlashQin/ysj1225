<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_white_12_bg"
        android:padding="5dp"
        android:layout_width="220dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#666666"
                android:text="视频中的同款商品"/>

            <ImageView
                android:id="@+id/ivClose"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/close"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/ivPic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="5dp"/>

                <LinearLayout
                    android:layout_toRightOf="@+id/ivPic"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/ivPic"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:maxEms="7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColor3"
                        android:textSize="14sp"
                        tools:text="白金珍珠发卡白金珍珠发卡"/>

                    <TextView
                        android:id="@+id/tvPrice1"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColor9"
                        android:textSize="10sp"
                        tools:text="¥66.66"/>

                    <LinearLayout
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvNumber"
                            android:layout_weight="1"
                            android:layout_toRightOf="@+id/ivPic"
                            android:layout_marginLeft="10dp"
                            android:layout_below="@+id/tvName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            tools:text="已卖出999" />

                        <TextView
                            android:id="@+id/tvPrice2"
                            android:layout_gravity="right|bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red"
                            android:textSize="10sp"
                            tools:text="¥66.66"/>

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>