<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/x10"
        android:background="@mipmap/dialog_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_opensvip_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/OpenSvip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x20"
            android:text="开通SVIP，邀请多位主播一起嗨"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <com.kalacheng.util.view.ItemLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x20"
            app:height_ratio="13"
            app:width_ratio="12">

            <ImageView
                android:id="@+id/OpenSvip_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </com.kalacheng.util.view.ItemLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/OpenSivp_MoneyList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10" />

        <TextView
            android:id="@+id/OpenSvip_openText"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x34"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginBottom="@dimen/x20"
            android:background="@drawable/bg_open_svip"
            android:gravity="center"
            android:text="立即开通"
            android:textColor="#221E41"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
