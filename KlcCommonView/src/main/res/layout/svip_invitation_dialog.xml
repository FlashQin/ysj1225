<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <!--完成任务-->
    <RelativeLayout
        android:id="@+id/Re_Task"
        android:layout_width="@dimen/x348"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/close"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginRight="@dimen/x10"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/UserImage"
            android:layout_width="@dimen/x48"
            android:layout_height="@dimen/x48"
            app:riv_oval="true"
            android:layout_below="@+id/close"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginLeft="@dimen/x30"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/UserImage"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/x10"
            android:layout_below="@+id/close"
            android:layout_marginTop="@dimen/x5"
            android:textColor="@color/textColor3"
            android:text="大开发可可粉"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/UserImage"
            android:layout_marginLeft="@dimen/x10"
            android:layout_below="@+id/UserName"
            android:layout_marginTop="@dimen/x10"
            android:textColor="@color/textColor6"
            android:text="邀请你加入群聊…"/>


        <LinearLayout
            android:layout_width="@dimen/x348"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/UserImage"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginBottom="@dimen/x20"
            >
            <TextView
                android:id="@+id/seeyou"
                android:layout_width="0dp"
                android:layout_height="@dimen/x34"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x25"
                android:layout_marginRight="@dimen/x25"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/bg_grey_recharge"
                android:text="忽略"/>

            <TextView
                android:id="@+id/join"
                android:layout_width="0dp"
                android:layout_height="@dimen/x34"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x25"
                android:layout_marginRight="@dimen/x25"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/bg_svip_receive"
                android:text="加入群聊"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
