<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <!--勋章-->
    <RelativeLayout
        android:id="@+id/Re_Medal"
        android:layout_width="@dimen/x340"
        android:layout_height="@dimen/x80"
        android:background="@mipmap/medal_one">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/Medal_userImage"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/Medal_userImage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Medal_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:text="恭喜 啊啊啊"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/Medal_Content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="5dp"
                android:text="获得 啊啊啊啊啊"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/Medal_MedalImage"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginBottom="@dimen/x10" />
    </RelativeLayout>
</LinearLayout>
