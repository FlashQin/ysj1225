<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal">
    <!--升级-->
    <RelativeLayout
        android:id="@+id/Re_Upgrade"
        android:layout_width="@dimen/x300"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >

        <RelativeLayout
            android:id="@+id/Upgrade_bg"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:background="@mipmap/bg_user_upgrade"
            >
            <TextView
                android:id="@+id/Upgrade_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_centerVertical="true"
                android:text="恭喜"/>
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/Upgrade_userImage"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                app:riv_oval="true"
                android:scaleType="centerCrop"
                android:layout_toRightOf="@+id/Upgrade_text1"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/Upgrade_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/x10"
                android:layout_toRightOf="@+id/Upgrade_userImage"
                android:layout_centerVertical="true"
                android:text="小米"/>
            <TextView
                android:id="@+id/Upgrade_Content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/Upgrade_userName"
                android:text="升级大11级"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
