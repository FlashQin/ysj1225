<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_music"
    android:minWidth="@dimen/x250"
    android:id="@+id/music_Re"
    android:layout_marginTop="@dimen/x170"
    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/LiveMusic"
        android:layout_width="@dimen/x28"
        android:layout_height="@dimen/x28"
        android:src="@mipmap/ic_launcher"
        app:riv_oval="true"
        android:layout_marginTop="@dimen/x4"
        android:layout_marginBottom="@dimen/x4"
        android:layout_marginLeft="@dimen/x4"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/LiveMusic"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x30"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/LiveMusic_loop"
                android:layout_width="@dimen/x23"
                android:layout_height="@dimen/x23"
                android:layout_marginRight="@dimen/x8"
                android:background="@mipmap/icon_music_loop"
                />
            <ImageView
                android:id="@+id/LiveMusic_last"
                android:layout_width="@dimen/x23"
                android:layout_height="@dimen/x23"
                android:layout_marginRight="@dimen/x8"
                android:background="@mipmap/icon_music_last"
                />
            <ImageView
                android:id="@+id/LiveMusic_start"
                android:layout_width="@dimen/x23"
                android:layout_height="@dimen/x23"
                android:layout_marginRight="@dimen/x8"
                android:background="@mipmap/icon_music_start"
                />
            <ImageView
                android:id="@+id/LiveMusic_next"
                android:layout_width="@dimen/x23"
                android:layout_height="@dimen/x23"
                android:layout_marginRight="@dimen/x8"
                android:background="@mipmap/icon_music_next"
                />
            <ImageView
                android:id="@+id/LiveMusic_voice"
                android:layout_width="@dimen/x23"
                android:layout_height="@dimen/x23"
                android:layout_marginRight="@dimen/x8"
                android:background="@mipmap/icon_music_voice"
                />
            <ImageView
                android:id="@+id/LiveMusic_list"
                android:layout_width="@dimen/x23"
                android:layout_height="@dimen/x23"
                android:layout_marginRight="@dimen/x8"
                android:background="@mipmap/icon_music_list"
                />
            <ImageView
                android:layout_width="@dimen/x1"
                android:layout_height="@dimen/x18"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginLeft="@dimen/x8"
                android:layout_gravity="center_vertical"
                android:background="#fff"
                />
            <ImageView
                android:id="@+id/LiveMusic_close"
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/x18"
                android:layout_marginRight="@dimen/x8"
                android:tint="@color/white"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/close"
                />
        </LinearLayout>
</RelativeLayout>

