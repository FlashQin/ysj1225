<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


        <RelativeLayout
            android:layout_width="@dimen/x348"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/close"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginRight="@dimen/x10"/>

            <RelativeLayout
                android:id="@+id/VoiceAnchorInvitation_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginLeft="@dimen/x30"
                android:layout_below="@+id/close">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/VoiceAnchorInvitation_HeadImage"
                    android:layout_width="@dimen/x48"
                    android:layout_height="@dimen/x48"
                    app:riv_oval="true"
                    android:src="@mipmap/ic_launcher"/>
                <LinearLayout
                    android:id="@+id/VoiceAnchorInvitation_Lin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@+id/VoiceAnchorInvitation_HeadImage"
                    android:layout_marginTop="@dimen/x5"
                    android:layout_marginLeft="@dimen/x10">
                    <TextView
                        android:id="@+id/VoiceAnchorInvitation_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColor3"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:text="阿达臭豆腐"/>
                    <ImageView
                        android:id="@+id/VoiceAnchorInvitation_Gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_boy"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_gravity="center_vertical"
                        />
                    <ImageView
                        android:id="@+id/VoiceAnchorInvitation_Grade"
                        android:layout_width="@dimen/x34"
                        android:layout_height="@dimen/x15"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/VoiceAnchorInvitation_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/textColor3"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_below="@+id/VoiceAnchorInvitation_Lin"
                    android:layout_toRightOf="@+id/VoiceAnchorInvitation_HeadImage"
                    android:text="邀请你上麦互动了"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:layout_marginBottom="@dimen/x20"
                android:gravity="center_horizontal"
                android:layout_below="@+id/VoiceAnchorInvitation_information"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/VoiceAnchorInvitation_refuse"
                    android:layout_width="@dimen/x110"
                    android:layout_height="@dimen/x34"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginLeft="@dimen/x25"
                    android:layout_marginRight="@dimen/x25"
                    android:gravity="center"
                    android:background="@drawable/bg_grey_recharge"
                    android:text="拒绝"/>
                <TextView
                    android:id="@+id/VoiceAnchorInvitation_agree"
                    android:layout_width="@dimen/x110"
                    android:layout_height="@dimen/x34"
                    android:textColor="@color/gift_color"
                    android:textSize="16sp"
                    android:layout_marginLeft="@dimen/x25"
                    android:layout_marginRight="@dimen/x25"
                    android:gravity="center"
                    android:background="@drawable/bg_svip_receive"
                    android:text="同意"/>
            </LinearLayout>
        </RelativeLayout>



</RelativeLayout>