<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/x235"
        android:layout_height="@dimen/y180"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@mipmap/dialog_close" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/iv_close"
            android:layout_marginTop="@dimen/x10"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:background="@mipmap/bg_live_time"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x35"
                android:text="你的余额不足"
                android:textColor="#ffffffff"
                android:layout_centerHorizontal="true"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:layout_below="@+id/title"
                android:text="先去充值吧"
                android:textColor="#ffffffff"
                android:layout_centerHorizontal="true"
                android:textSize="16sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/x16"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_sure"
                    android:layout_width="@dimen/x130"
                    android:layout_height="@dimen/x32"
                    android:background="@drawable/white_rect2"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:text="立即充值"
                    android:textColor="#7851DF"
                    android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>